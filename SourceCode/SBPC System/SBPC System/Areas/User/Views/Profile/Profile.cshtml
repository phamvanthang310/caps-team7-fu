@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/User/_UserLayout.cshtml";
}



<!-- Start: Topbar -->
<header id="topbar" class="">
    <div class="topbar-left">
        <ol class="breadcrumb">
            <li class="crumb-active">
                <a href="dashboard.html">Profile</a>
            </li>
            <li class="crumb-icon">
                <a href="dashboard.html">
                    <span class="glyphicon glyphicon-home"></span>
                </a>
            </li>
            <li class="crumb-link">
                <a href="index.html">Home</a>
            </li>
            <li class="crumb-trail">Profile</li>
        </ol>
    </div>
</header>
<!-- End: Topbar -->
<div id="content">
    <div class="col-md-8">
        <div class="panel">
            <div class="panel-heading">
                <span class="panel-title">Account Management</span>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Account</label>
                        <div class="col-lg-8">
                            <p class="form-control-static text-muted">FirstUser</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputStandard" class="col-lg-3 control-label">Full Name</label>
                        <div class="col-lg-8">
                            <input type="text" id="inputStandard" class="form-control" value="Type Here...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-lg-3 control-label">Email</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" id="form-control" value="example@gmail.com">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="disabledInput" class="col-lg-3 control-label">Phone</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" id="form-control" value="0792426">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label" for="textArea1">Address</label>
                        <div class="col-lg-8">
                            <textarea class="form-control textarea-grow" id="textArea1" rows="4">abc street district 1 HCM city, VietNam</textarea>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button class="button btn-lg btn-primary btn-block" type="submit">Save</button>
                        <a id="password_popup" class="button btn-lg btn-primary btn-block text-center" href="#modal-form">Change Password</a>
                    </div>
                </form>
            </div>
        </div>
    </div class="col-md-8">

    
    
    <div class="col-md-4">
        <div class="btn btn-alert btn-gradient dark btn-block">
            <span class="glyphicon glyphicon-star text-warning-lighter fs30"></span><h5>Premium User</h5>
        </div>
        <h3><a href="">Do you want to Upgrade ?</a></h3>
    </div>

</div>

<div id="modal-form" class=" popup-basic admin-form mfp-with-anim mfp-hide">
    <div class="admin-form tab-pane active" id="login2" role="tabpanel">
        <div class="panel panel-primary heading-border">
            <div class="panel-heading">
                <span class="panel-title">Change Password</span>
            </div>
            <!-- end .form-header section -->
            <div class="panel-body ">
                <div class="section row">
                    <div class="col-md-12 ">
                        <div class="section-divider">
                            <span><i class="fa fa-user"></i> UserABC</span>
                        </div>
                        <!-- .tagline -->
                        <div class="section">
                            <label for="username" class="field prepend-icon">
                                @Html.TextBox("txOldPassword", null, null, new { @class = "gui-input", placeholder = "Old Password" })
                                <label for="password" class="field-icon">
                                    <i class="fa fa-close"></i>
                                </label>
                            </label>
                        </div>
                        <!-- end section -->
                        <div class="section">
                            <label for="password" class="field prepend-icon">
                                @Html.Password("txtNewPassword", null, new { @class = "gui-input", placeholder = "NewPassword" })
                                <label for="password" class="field-icon">
                                    <i class="fa fa-lock"></i>
                                </label>
                            </label>
                        </div>
                        <!-- end section -->
                        <div class="section">
                            <label for="password" class="field prepend-icon">
                                @Html.Password("txtConfirm", null, new { @class = "gui-input", placeholder = "Confirm" })
                                <label for="password" class="field-icon">
                                    <i class="fa fa-lock"></i>
                                </label>
                            </label>
                        </div>
                        <!-- end section -->
                    </div>
                    
                    <!-- end .colm section -->
                </div>
                <!-- end .section row section -->
            </div>
            <!-- end .form-body section -->
            <div class="panel-footer">
                <button type="submit" class="button btn-primary">OK</button>
            </div>
            <!-- end .form-footer section -->
            }

        </div>
        <!-- end .admin-form section -->
    </div>
    <!-- end: .admin-form -->
</div>

