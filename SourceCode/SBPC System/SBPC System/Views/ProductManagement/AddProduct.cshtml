@model SBPC_System.Models.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-body ">
    <div class="section row">
        <div class="col-md-12 ">
            <!-- .tagline -->
            <div class="col-lg-10">
                <div class="panel">

                    <div class="panel-heading">
                        <span class="panel-title">

                            Add New Product

                        </span>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "addProductForm" }))
                        {
                            ViewContext.FormContext.ValidationSummaryId = "valSumId";
                            @Html.ValidationSummary(false, "Please fix these errors.", new Dictionary<string, object> { { "id", "valSumId" } });
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="inputStandard">

                                    Product Name

                                </label>
                                <div class="col-lg-9">
                                    @Html.TextBox("Name", null, null, new { @class = "form-control", placeholder = "Type Here..." })
                                    @Html.ValidationMessage("Name", "*")
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="inputStandard">

                                    Available Quantity

                                </label>
                                <div class="col-lg-9">
                                    @Html.TextBox("AvailableQuantity", null, null, new { @class = "form-control", placeholder = "Type Here..." })
                                    @Html.ValidationMessage("AvailableQuantity", "*")
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="inputStandard">

                                    Product Category

                                </label>
                                <div class="col-lg-9">
                                    <select id="multiselect5" style="display: none;">
                                        <option value="cheese">

                                            Cheese

                                        </option>
                                        <option value="tomatoes">

                                            Tomatoes

                                        </option>
                                        <option selected="" value="mozarella">

                                            Mozzarella

                                        </option>
                                        <option value="mushrooms">

                                            Mushrooms

                                        </option>
                                        <option value="pepperoni">

                                            Pepperoni

                                        </option>
                                        <option value="onions">

                                            Onions

                                        </option>
                                    </select>
                                    <div class="btn-group">


                                    </div>
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="inputStandard">

                                    Price

                                </label>
                                <div class="col-lg-9">
                                    @Html.TextBox("Price", null, null, new { @class = "form-control", placeholder = "Type Here..." })
                                    @Html.ValidationMessage("Price", "*")
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="inputStandard">

                                    Promotion Price

                                </label>
                                <div class="col-lg-9">
                                    @Html.TextBox("PromotionPrice", null, null, new { @class = "form-control", placeholder = "Type Here..." })

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="inputStandard">

                                    Description

                                </label>
                                <div class="col-lg-9">
                                    <textarea id="textArea2" class="form-control" rows="3"></textarea>
                                </div>
                            </div>

                            if (Request.QueryString["param"] == "Update")
                            {
                                <input type="submit" value="Update" class="btn btn-primary">
                            }
                            else
                            {
                                <input type="submit" value="Add" class="btn btn-primary">
                            }

                        }
                    </div>

                </div>
            </div>

            <!-- end section -->
        </div>
    </div>
    <!-- end .section row section -->
</div>
<!-- end .form-body section -->
