@model SBPC_System.Models.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-body ">
    <div class="section row">
        <div class="col-md-12 ">
            <!-- .tagline -->
            <div class="col-lg-10">
                <div class="panel">

                    <div class="panel-heading">
                        <span class="panel-title">

                            Add New Category

                        </span>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "addProductForm" }))
                        {
                            ViewContext.FormContext.ValidationSummaryId = "valSumId";
                            @Html.ValidationSummary(false, "Please fix these errors.", new Dictionary<string, object> { { "id", "valSumId" } });
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="inputStandard">

                                    Category Name

                                </label>
                                <div class="col-lg-9">
                                    @Html.TextBox("Name", null, null, new { @class = "form-control", placeholder = "Type Here..." })
                                    @Html.ValidationMessage("Name", "*")
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="inputStandard">

                                    Description

                                </label>
                                <div class="col-lg-9">
                                    <textarea id="textArea2" class="form-control" rows="3"></textarea>
                                </div>
                            </div>

                            if (Request.QueryString["param"] == "Update")
                            {
                                <input type="submit" value="Update" class="btn btn-primary">
                            }
                            else
                            {
                                <input type="submit" value="Add" class="btn btn-primary">
                            }

                        }
                    </div>

                </div>
            </div>

            <!-- end section -->
        </div>
    </div>
    <!-- end .section row section -->
</div>
<!-- end .form-body section -->
